using System;


    class Program
    {
        static void Main(string[] args)
        {

            Console.Write("Начальное количество золота : ");
            int gold = Convert.ToInt32(Console.ReadLine());
            int crystalPrice = 5;
            Console.WriteLine($"предлагаем вам купить 1 кристалл по цене {crystalPrice} золотых");
            Console.Write($"сколько кристалловы вы желаете приобрести? \n: ");
            int quantityCrystal = Convert.ToInt32(Console.ReadLine());
            int moreGold = crystalPrice * quantityCrystal;
            if (moreGold > gold)
            {
                Console.BackgroundColor = ConsoleColor.Red;
                Console.ForegroundColor = ConsoleColor.Green;
                Console.WriteLine($" У вас недостаточно золота на преобретение {quantityCrystal} кристаллов " +
                    $"Пожалуйста, приходите когда будет достаточно золота");
                //Console.Clear();    
            }
            if (moreGold <= gold)
            {
                Console.BackgroundColor = ConsoleColor.Green;
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine($"Поздравляем вас с приобретение {quantityCrystal} кристаллов");
                int remainingGold = gold - (crystalPrice * quantityCrystal);
                Console.WriteLine($"После данного приобретения у вас умеется {remainingGold} золота и {quantityCrystal} кристаkлов");
            }
            
        }



    }
